{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ninja-x64-Debug",
            "displayName": "Ninja x64 Debug (vcpkg manifest)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-windows",
                "VCPKG_HOST_TRIPLET": "x64-windows"
            }
        },
        {
            "name": "ninja-x64-Release",
            "displayName": "Ninja x64 Release (vcpkg manifest)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-windows",
                "VCPKG_HOST_TRIPLET": "x64-windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-ninja-x64-Debug",
            "configurePreset": "ninja-x64-Debug"
        },
        {
            "name": "build-ninja-x64-Release",
            "configurePreset": "ninja-x64-Release"
        }
    ]
}